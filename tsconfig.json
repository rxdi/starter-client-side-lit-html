{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "module": "esnext",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "index.d.ts"],
    "lib": ["es2015", "es2016", "es6", "es2017", "dom", "dom.Iterable"],
    "types": ["./types"],
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@introspection/*": ["app/@introspection/*"],
      "@core/*": ["app/core/*"],
      "~/*": ["app/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
